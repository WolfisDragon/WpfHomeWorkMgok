<Window x:Class="WpfEconomicPlatform.addCategory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfEconomicPlatform"
        ResizeMode="NoResize"
        mc:Ignorable="d"
        Title="Добавить категорию" Height="350" Width="300">
    <Grid Margin="10">
        <TextBlock HorizontalAlignment="Center" Margin="0,20,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="Выберите тип категории:"/>

        <!-- Комбо-бокс с правильными элементами -->
        <ComboBox x:Name="categoryTypeComboBox" HorizontalAlignment="Center" Margin="0,50,0,0" VerticalAlignment="Top" Width="150">
            <ComboBoxItem Content="Доход"/>
            <ComboBoxItem Content="Расход"/>
        </ComboBox>

        <TextBlock HorizontalAlignment="Center" Margin="0,100,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="Название новой категории:"/>
        <TextBox x:Name="categoryNameTextBox" HorizontalAlignment="Center" Margin="0,130,0,0" VerticalAlignment="Top" Width="150"/>

        <Button Content="Добавить" HorizontalAlignment="Center" Margin="0,180,0,0" VerticalAlignment="Top" Width="80" Click="createCategory"/>
    </Grid>
</Window>
