<Window x:Class="WpfEconomicPlatform.Setgoals"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfEconomicPlatform"
        ResizeMode="NoResize"
        mc:Ignorable="d"
        Title="задать цель" Height="350" Width="300">
    <Grid Background="#6F996D">
        <TextBox x:Name="setGoalOutcome" HorizontalAlignment="Center" Height="26" Margin="0,74,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200" Background="#E0D8CB" BorderBrush="#4A4130"/>
        <TextBox x:Name="setGoalIncome" HorizontalAlignment="Center" Height="26" Margin="0,141,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200" Background="#E0D8CB" BorderBrush="#4A4130"/>
        <TextBlock Margin="50,58,128,0" TextWrapping="Wrap" Text="Задать цель расхода:" Height="16" VerticalAlignment="Top" Foreground="#4A4130"/>
        <TextBlock Margin="50,125,128,0" TextWrapping="Wrap" Text="Задать цель дохода:" Height="16" VerticalAlignment="Top" Foreground="#4A4130"/>
        <Button Content="Готово" HorizontalAlignment="Left" Height="26" Margin="10,241,0,0" VerticalAlignment="Top" Width="126" Foreground="#4A4130" Background="#E0D8CB" BorderBrush="#4A4130" Click="Button_Click"/>
        <Button Content="Назад" HorizontalAlignment="Left" Height="26" Margin="158,241,0,0" VerticalAlignment="Top" Width="126" Click="exit" Foreground="#4A4130" Background="#E0D8CB" BorderBrush="#4A4130"/>

    </Grid>
</Window>
