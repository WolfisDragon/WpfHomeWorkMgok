        mc:Ignorable="d"
        Title="Регистрация" Height="300" Width="250">
    <Grid Height="434" VerticalAlignment="Bottom">
        <TextBox x:Name="fullNameTextBox" HorizontalAlignment="Left" Height="17" Margin="40,207,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="160"/>
