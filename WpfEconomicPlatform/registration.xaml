<Window x:Class="WpfEconomicPlatform.registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfEconomicPlatform"
        ResizeMode="NoResize"
        mc:Ignorable="d"
        Title="Регистрация" Height="300" Width="250">
    <Grid Height="434" VerticalAlignment="Bottom" Background="#6F996D">
        <TextBox x:Name="fullNameTextBox" HorizontalAlignment="Left" Height="17" Margin="40,207,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="160" Background="#E0D8CB" BorderBrush="#4A4130"/>
        <TextBox x:Name="emailTextBox" HorizontalAlignment="Left" Height="18" TextWrapping="Wrap" VerticalAlignment="Top" Width="160" Margin="40,250,0,0" Background="#E0D8CB" BorderBrush="#4A4130"/>
        <TextBox x:Name="loginTextBox" HorizontalAlignment="Left" Height="17" Margin="40,294,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="160" Background="#E0D8CB" BorderBrush="#4A4130"/>
        <TextBlock HorizontalAlignment="Left" Margin="43,186,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="45" Text="ФИО:" Foreground="#4A4130" FontSize="16"/>
        <TextBlock HorizontalAlignment="Left" Margin="40,229,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Foreground="#4A4130" FontSize="16" Text="Почта:"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="40,273,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Foreground="#4A4130" FontSize="16" Language="ru-ru" Text="Логин:"/></TextBlock>
        <TextBox x:Name="passwordTextBox" HorizontalAlignment="Left" Height="17" Margin="40,337,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="160" Background="#E0D8CB" BorderBrush="#4A4130"/>
        <TextBlock HorizontalAlignment="Left" Margin="40,316,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Foreground="#4A4130" FontSize="16" Language="ru-ru" Text="Пароль:"/></TextBlock>
        <Button Content="Подтвердить" HorizontalAlignment="Left" Margin="135,387,0,0" VerticalAlignment="Top" Width="81" Click="Registration" Foreground="#4A4130" Background="#E0D8CB" BorderBrush="#4A4130"/>
        <Button Content="Назад" HorizontalAlignment="Left" Margin="23,387,0,0" VerticalAlignment="Top" Width="81" Click="exitRegistration" Foreground="#4A4130" Background="#E0D8CB" BorderBrush="#4A4130"/>
    </Grid>
</Window>
